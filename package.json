{
  "name": "countdown-auction-app",
  "version": "1.0.0",
  "description": "Countdown auction application with time-based logic",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "npm run build:client && tsx watch src/server/index.ts",
    "build": "tsc && tsc -p tsconfig.client.json",
    "build:server": "tsc",
    "build:client": "tsc -p tsconfig.client.json",
    "start": "node dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": ["auction", "countdown", "timer"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
